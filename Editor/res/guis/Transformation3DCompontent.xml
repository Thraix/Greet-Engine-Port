<Container width="1w" vertical="true" padding="10" spacing="5">
  <Label name="transformation3DLabel" width="1w">Transformation3DComponent</Label>
  <Container width="1w" vertical="true" padding="10" spacing="5" border="2">
    <Label name="translateLabel" width="1w">Translation</Label>
    <Container width="1w" vertical="false">
      <Label name="translateXLabel" height="1w" align="center">X</Label>
      <TextBox name="translateX" width="1w"/>
      <Label name="translateYLabel" height="1w" align="center">Y</Label>
      <TextBox name="translateY" width="1w"/>
      <Label name="translateZLabel" height="1w" align="center">Z</Label>
      <TextBox name="translateZ" width="1w"/>
    </Container>

    <Label name="scalingLabel" width="1w">Scaling</Label>
    <Container width="1w" vertical="false">
      <Label name="scalingXLabel" height="1w" align="center">X</Label>
      <TextBox name="scalingX" width="1w"/>
      <Label name="scalingYLabel" height="1w" align="center">Y</Label>
      <TextBox name="scalingY" width="1w"/>
      <Label name="scalingZLabel" height="1w" align="center">Z</Label>
      <TextBox name="scalingZ" width="1w"/>
    </Container>

    <Label name="rotationLabel" width="1w">Rotation</Label>
    <Container width="1w" vertical="false">
      <Label name="rotationXLabel" height="1w" align="center">X</Label>
      <TextBox name="rotationX" width="1w"/>
      <Label name="rotationYLabel" height="1w" align="center">Y</Label>
      <TextBox name="rotationY" width="1w"/>
      <Label name="rotationZLabel" height="1w" align="center">Z</Label>
      <TextBox name="rotationZ" width="1w"/>
    </Container>

  </Container>
</Container>
